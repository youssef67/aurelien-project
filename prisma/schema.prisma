generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Enum pour le type de demande
enum RequestType {
  INFO
  ORDER

  @@map("request_type")
}

// Enum pour le statut de demande
enum RequestStatus {
  PENDING
  TREATED

  @@map("request_status")
}

// Enum pour les catégories d'offres
enum OfferCategory {
  EPICERIE
  FRAIS
  DPH
  SURGELES
  BOISSONS
  AUTRES

  @@map("offer_category")
}

// Enum pour le statut des offres
enum OfferStatus {
  DRAFT
  ACTIVE
  EXPIRED

  @@map("offer_status")
}

// Enum pour les enseignes de magasins
enum Brand {
  LECLERC
  INTERMARCHE
  SUPER_U
  SYSTEME_U

  @@map("brand")
}

// Modèle Fournisseur
model Supplier {
  id          String   @id @default(uuid()) @db.Uuid
  email       String   @unique
  companyName String   @map("company_name")
  phone       String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  offers   Offer[]
  requests Request[]

  @@map("suppliers")
  // Note: @unique already creates an index, no need for separate @@index
}

// Modèle Offre
model Offer {
  id              String        @id @default(uuid()) @db.Uuid
  supplierId      String        @map("supplier_id") @db.Uuid
  name            String
  promoPrice      Decimal       @map("promo_price") @db.Decimal(10, 2)
  discountPercent Int           @map("discount_percent")
  startDate       DateTime      @map("start_date") @db.Date
  endDate         DateTime      @map("end_date") @db.Date
  category        OfferCategory
  subcategory     String?
  photoUrl        String?       @map("photo_url")
  margin          Decimal?      @db.Decimal(5, 2)
  volume          String?
  conditions      String?       @db.Text
  animation       String?       @db.Text
  status          OfferStatus   @default(DRAFT)
  createdAt       DateTime      @default(now()) @map("created_at")
  updatedAt       DateTime      @updatedAt @map("updated_at")
  deletedAt       DateTime?     @map("deleted_at")

  // Relations
  supplier Supplier  @relation(fields: [supplierId], references: [id], onDelete: Cascade)
  requests Request[]

  // Indexes
  @@index([supplierId])
  @@index([status, startDate, endDate])

  @@map("offers")
}

// Modèle Magasin
model Store {
  id        String   @id @default(uuid()) @db.Uuid
  email     String   @unique
  name      String
  brand     Brand
  city      String
  phone     String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  requests Request[]

  @@map("stores")
  // Note: @unique already creates an index, no need for separate @@index
}

// Enum pour le type de notification
enum NotificationType {
  NEW_REQUEST
  REQUEST_TREATED

  @@map("notification_type")
}

// Enum pour le type d'utilisateur (notification)
enum UserType {
  SUPPLIER
  STORE

  @@map("user_type")
}

// Modèle Notification
model Notification {
  id        String           @id @default(uuid()) @db.Uuid
  userId    String           @map("user_id") @db.Uuid
  userType  UserType         @map("user_type")
  type      NotificationType
  title     String
  body      String           @db.Text
  relatedId String?          @map("related_id") @db.Uuid
  read      Boolean          @default(false)
  createdAt DateTime         @default(now()) @map("created_at")
  updatedAt DateTime         @updatedAt @map("updated_at")

  @@index([userId, userType, read])
  @@map("notifications")
}

// Modèle Demande
model Request {
  id         String        @id @default(uuid()) @db.Uuid
  storeId    String        @map("store_id") @db.Uuid
  offerId    String        @map("offer_id") @db.Uuid
  supplierId String        @map("supplier_id") @db.Uuid
  type       RequestType
  message    String?       @db.Text
  status     RequestStatus @default(PENDING)
  createdAt  DateTime      @default(now()) @map("created_at")
  updatedAt  DateTime      @updatedAt @map("updated_at")

  // Relations
  store    Store    @relation(fields: [storeId], references: [id], onDelete: Cascade)
  offer    Offer    @relation(fields: [offerId], references: [id], onDelete: Cascade)
  supplier Supplier @relation(fields: [supplierId], references: [id], onDelete: Cascade)

  // Indexes
  @@index([offerId])
  @@index([supplierId])

  // Unique constraint: un magasin ne peut envoyer qu'une demande par type par offre
  @@unique([storeId, offerId, type])

  @@map("requests")
}
